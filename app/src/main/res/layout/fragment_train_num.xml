<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.TrainNumFragment"
    android:orientation="vertical"
    android:background="#f5f5f5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="车次名称："
            android:textSize="18sp"
            android:textColor="#000000" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/edt_tn_tn"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="G34"
            android:background="@null" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="25dp"
            android:background="#eeeeee"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="乘坐日期："
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_alignParentLeft="true"/>
            <EditText
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:id="@+id/edt_tn_data"
                android:layout_centerInParent="true"
                android:textColor="#000000"
                android:textSize="16sp"
                android:text="2019-06-25"
                android:background="@null"
                android:gravity="center"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/back"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="25dp"
            android:background="#eeeeee"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:text="高铁票"
                android:id="@+id/cb_tn_train"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#eeeeee"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_tn_query"
        android:background="@drawable/btn_query_background"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:elevation="10dp"
        android:text="查    询"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:textColor="#004499"
        android:text="- - - - - - -历史查询- - - - - - -"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="15dp"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ll_depot_hc"
            android:gravity="center">
            <android.support.v7.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rv_depot_hc"
                android:layout_margin="5dp"
                android:gravity="center">
            </android.support.v7.widget.RecyclerView>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_depot_delete"
                android:text="清除所有历史纪录"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#487824"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>