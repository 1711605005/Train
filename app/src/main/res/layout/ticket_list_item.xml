<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:textSize="16sp"
        android:textColor="#894733"
        android:id="@+id/tv_tl_num"
        android:text="车次"
        android:gravity="center"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:textSize="16sp"
        android:textColor="#894733"
        android:id="@+id/tv_tl_start"
        android:text="始发站"
        android:gravity="center"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:textSize="16sp"
        android:textColor="#894733"
        android:id="@+id/tv_tl_stop"
        android:text="终到站"
        android:gravity="center"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:textSize="16sp"
        android:textColor="#894733"
        android:id="@+id/tv_tl_stime"
        android:text="出发时间"
        android:gravity="center"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:textSize="16sp"
        android:textColor="#894733"
        android:id="@+id/tv_tl_atime"
        android:text="到达时间"
        android:gravity="center"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:textSize="16sp"
        android:textColor="#894733"
        android:id="@+id/tv_tl_lost"
        android:text="余座"
        android:gravity="center"/>

</LinearLayout>
