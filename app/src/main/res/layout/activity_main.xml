<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#f5f5f5">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/holo_blue_dark">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="火车票务通"
            android:textColor="#8EF4FFFF"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_main_title"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:text="站站查询"
            android:textSize="20sp" />
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/vp_main_body"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:id="@+id/rg_main_all">
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:id="@+id/rbtn_main_depot"
            android:drawableTop="@drawable/rbtn_depot_bg"
            android:gravity="center"
            android:checked="true"
            android:text="站站"
            android:button="@null"
            android:textColor="@drawable/depot_text_bg"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:id="@+id/rbtn_main_trainnum"
            android:drawableTop="@drawable/rbtn_tn_bg"
            android:gravity="center"
            android:text="车次"
            android:button="@null"
            android:textColor="@drawable/depot_text_bg"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:id="@+id/rbtn_main_station"
            android:drawableTop="@drawable/rbtn_station_bg"
            android:gravity="center"
            android:text="车站"
            android:button="@null"
            android:textColor="@drawable/depot_text_bg"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:id="@+id/rbtn_main_me"
            android:gravity="center"
            android:drawableTop="@drawable/rbtn_me_bg"
            android:text="我的"
            android:button="@null"
            android:textColor="@drawable/depot_text_bg"/>
    </RadioGroup>



</LinearLayout>